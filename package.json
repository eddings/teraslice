{
    "name": "teraslice",
    "private": true,
    "scripts": {
        "start": "node service.js",
        "bootstrap": "lerna bootstrap",
        "bootstrap:dev": "lerna bootstrap && lerna link && lerna run build",
        "build": "lerna run build",
        "test": "jest --forceExit --maxWorkers=1",
        "test:e2e": "yarn --cwd ./e2e test",
        "test:e2e:logs": "yarn --cwd ./e2e logs",
        "lint": "env FORCE_COLOR=1 lerna run lint --no-bail",
        "lint:fix": "env FORCE_COLOR=1 lerna run lint:fix --no-bail",
        "publish:draft": "./scripts/publish.sh draft",
        "publish:release": "./scripts/publish.sh release"
    },
    "dependencies": {
        "lerna": "^3.0.5"
    },
    "devDependencies": {
        "@types/jest": "^23.3.1",
        "babel-core": "^6.0.0",
        "babel-jest": "^23.4.2",
        "jest": "^23.5.0",
        "jest-extended": "^0.8.1",
        "ts-jest": "^23.1.3",
        "typescript": "^3.0.0"
    },
    "workspaces": [
        "packages/*",
        "e2e"
    ]
}
