{
    "name": "teraslice",
    "private": true,
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "bootstrap:production": "lerna bootstrap -- --silent --no-progress --production=true",
        "test": "env FORCE_COLOR=1 lerna run test --concurrency=1",
        "test:e2e": "yarn --cwd ./e2e test",
        "coverage": "lerna run coverage",
        "lint": "env FORCE_COLOR=1 lerna run lint",
        "lint:fix": "env FORCE_COLOR=1 lerna run lint:fix"
    },
    "dependencies": {
        "lerna": "^3.0.0-rc.0"
    },
    "workspaces": [
        "packages/*",
        "e2e"
    ]
}
