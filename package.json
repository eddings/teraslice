{
    "name": "teraslice",
    "private": true,
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "bootstrap:production": "lerna bootstrap -- --silent --no-progress --production=true",
        "test": "env FORCE_COLOR=1 lerna run test --concurrency=1 --stream",
        "test:e2e": "yarn --cwd ./e2e test",
        "coverage": "lerna run coverage --no-bail",
        "lint": "env FORCE_COLOR=1 lerna run lint --no-bail",
        "lint:fix": "env FORCE_COLOR=1 lerna run lint:fix --no-bail",
        "publish:draft": "lerna publish --yes --canary=beta --skip-git",
        "publish:release": "lerna publish --yes --skip-git from-git"
    },
    "dependencies": {
        "lerna": "^3.0.0-rc.0"
    },
    "workspaces": [
        "packages/*",
        "e2e"
    ]
}
