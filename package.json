{
    "name": "teraslice-workspace",
    "private": true,
    "scripts": {
        "start": "node service.js",
        "bootstrap": "lerna bootstrap && ./scripts/build.sh",
        "bootstrap:dev": "lerna bootstrap && ./scripts/build.sh && lerna link",
        "bootstrap:production": "lerna bootstrap -- --silent --no-progress --production=true",
        "build": "./scripts/build.sh",
        "test": "env FORCE_COLOR=1 lerna run test",
        "test:e2e": "yarn --cwd ./e2e test",
        "coverage": "lerna run coverage --no-bail",
        "lint": "env FORCE_COLOR=1 lerna run lint --no-bail",
        "lint:fix": "env FORCE_COLOR=1 lerna run lint:fix --no-bail",
        "publish:draft": "./scripts/publish.sh draft",
        "publish:release": "./scripts/publish.sh release"
    },
    "dependencies": {
        "lerna": "^3.0.0-rc.0"
    },
    "workspaces": [
        "packages/*",
        "e2e"
    ]
}
