{
    "extends": "./tsconfig",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@terascope/*": [
                "../src/*",
                "../*",
                "../*/types"
            ],
            "*": [
                "types/*",
                "../src/*",
                "../*",
                "../../types/*",
                "node_modules/*",
                "../../node_modules/*/types"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}
