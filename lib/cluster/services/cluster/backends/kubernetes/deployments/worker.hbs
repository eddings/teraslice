{
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
        "labels": {
            "app": "teraslice",
            "nodeType": "{{nodeType}}",
            "exId": "{{exId}}",
            "jobId": "{{jobId}}"
        },
        "name": "{{name}}",
        "namespace": "{{namespace}}"
    },
    "spec": {
        "replicas": {{replicas}},
        "template": {
            "metadata": {
                "labels": {
                    "app": "teraslice",
                    "nodeType": "{{nodeType}}",
                    "exId": "{{exId}}",
                    "jobId": "{{jobId}}"
                }
            },
            "spec": {
                "containers": [{
                    "image": "{{dockerImage}}",
                    "name": "{{name}}",
                    "ports": [{ "containerPort": 45680 }],
                    "volumeMounts": [{
                        "mountPath": "/app/config",
                        "name": "config"
                    }],
                    "env": [{
                        "name": "NODE_TYPE",
                        "value": "{{nodeType}}"
                    },
                    {
                        "name": "EX",
                        "value": "{{execution}}"
                    },
                    {
                        "name": "POD_IP",
                        "valueFrom": {
                            "fieldRef": {
                                "fieldPath": "status.podIP"
                            }
                        }
                    }]
                }],
                "volumes": [{
                    "name": "config",
                    "configMap": {
                        "name": "teraslice-worker",
                        "items": [{
                            "key": "teraslice-worker.yaml",
                            "path": "teraslice.yaml"
                        }]
                    }
                }],
                "terminationGracePeriodSeconds": {{shutdownTimeout}},
                "imagePullSecrets": [{ "name": "docker-tera1-secret" }]
            }
        },
        "selector": {
            "matchLabels": {
                "app": "teraslice",
                "nodeType": "{{nodeType}}",
                "exId": "{{exId}}"
            }
        }
    }
}