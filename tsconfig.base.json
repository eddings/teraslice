{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2016",
        "lib": [
            "esnext"
        ],
        "experimentalDecorators": true,
        "declaration": true,
        "inlineSourceMap": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "preserveConstEnums": true,
        "typeRoots": [
            "node_modules/@types",
            "**/node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "**/test/**/*.ts"
    ]
}
