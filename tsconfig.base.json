{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2016",
        "lib": [
            "esnext"
        ],
        "experimentalDecorators": true,
        "declaration": true,
        "composite": true,
        "sourceMap": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "preserveConstEnums": true,
        "typeRoots": [
            "node_modules/@types",
            "**/node_modules/@types"
        ]
    }
}
