{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2017",
        "experimentalDecorators": true,
        "composite": true,
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "suppressImplicitAnyIndexErrors": true,
        "paths": {
            "@terascope/*": [
                "../*/src",
                "../*",
                "../*/types"
            ],
            "*": [
                "types/*",
                "../*",
                "../../types/*",
                "node_modules/*",
                "../../node_modules/*/types"
            ]
        }
    }
}
